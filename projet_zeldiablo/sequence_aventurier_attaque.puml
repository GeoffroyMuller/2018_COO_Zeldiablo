activate listM
listM-->a: monstre
deactivate listM
a->m : subirDegats(aventurier.getDegats())
activate m
m-->a
deactivate m

alt this.getSalle().detecterLesMorts()
a->sta : ajouterExp(this.getSalle().getMonstrePresent().get(i).getSTat().getExp())
activate sta
sta-->a 
deactivate sta
alt this.stat.getExp()==0
a->a : majStat()
activate a
a-->a 
deactivate a
end
end

end
end
