@startuml
Participant "Personnage : P1" as av #99FF99
Participant "Personnage : p2" as m #99FF99
Participant "Stats : stats " as s
Participant "Case[][] : grille " as g

av -> av : attaque()
activate av
 av-> s : getForce()
 activate s
 s --> av : int f
 

 deactivate s
 loop
  av-> g : get(x p1 -1, y p1)
  activate g
 g --> av : Personnage p2
 deactivate g
 
 
 av -->m : subirDegats(attaque * Force/100)
 activate m

 
 deactivate m
 end
 deactivate av 
 
 









@enduml